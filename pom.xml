<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ru.ifmo.cis</groupId>
    <artifactId>mrp</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>MRP-5513</name>
    <repositories>
        <repository>
            <id>prime-repo</id>
            <name>PrimeFaces Maven Repository</name>
            <url>http://repository.primefaces.org</url>
            <layout>default</layout>
        </repository>
    </repositories>
    <dependencies>
        <dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<version>6.0</version>
			<scope>provided</scope>
		</dependency>
        <dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.1</version>
            <scope>provided</scope>
		</dependency>
    </dependencies>
    <modules>
		<module>mrp-front</module>
        <module>mrp-back</module>
        <module>mrp-imit</module>
        <module>mrp-entity</module>
    </modules>

	<build>
		<plugins>
			<plugin>
                <artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jboss-maven-plugin</artifactId>
                <version>1.5.0</version>
                <configuration>
                    <hostName>127.0.0.1</hostName>
                    <port>8080</port>
                    <fileNames>
                        <fileName>${basedir}/mrp-back/mrp-back-ear/target/back-ear.ear</fileName>
                        <fileName>${basedir}/mrp-front/mrp-front-ear/target/front-ear.ear</fileName>
                    </fileNames>
                </configuration>
            </plugin>
    </plugins>
    </build>
</project>